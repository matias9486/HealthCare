@model IEnumerable<HealthCare.Web.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
    ViewData["TituloOperacion"] = "Pacientes";
}

<p>
    <a class="btn btn-chartreuse text-sombreado" asp-action="Create"><i class="fas fa-plus"></i> Crear Nuevo</a>
</p>

<div class="table-responsive">
    <table id="miTabla" class="table table-striped table-hover ">
        <thead class="bg-dark text-white">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>

                
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td class="text-center">
                    
                    @if (item.Imagen != null)
                    {
                        <img class="rounded-circle" id="profilePicture" style="width:40px;height:40px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(item.Imagen))"> }
                    else
                    {
                        <img class="rounded-circle" id="profilePicture" style="width:40px;height:40px; object-fit:cover" src="~/Images/avatar2.jpg">
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>

                
                <td><a class="btn btn-warning text-white text-sombreado" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen"></i><span class="miClass"> Editar</span></a></td>
                <td><a class="btn btn-primary text-sombreado" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-list-ul"></i><span class="miClass"> Detalles</span></a></td>
                <td><a class="btn btn-danger text-sombreado" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i><span class="miClass"> Eliminar</span></a></td>
            </tr>
            }
        </tbody>
    </table>
</div>