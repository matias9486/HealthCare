@model HealthCare.Web.Models.Paciente

@{
    ViewData["Title"] = "Pacientes";
    ViewData["TituloOperacion"] = "¿Desea eliminar Paciente?";

}
<div>
    
    <dl class="row">
        <div class="col-md-4 text-center">
            @if (@Model.Imagen != null)
            {
            <img class="rounded-circle" id="profilePicture" style="width:250px;height:250px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Imagen))"> }
                        else
                        {
            <img class="rounded-circle" id="profilePicture" style="width:250px;height:250px; object-fit:cover" src="~/Images/avatar2.jpg">            }
        </div>

        <div class="col-md-6">
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Apellido)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaNacimiento)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Direccion)
            </dd>
            
        </div>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-primary" />
        <a class="btn btn-primary " asp-action="Index">Volver a Lista</a>
    </form>
</div>
