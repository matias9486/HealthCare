@model HealthCare.Web.Models.Tratamiento

@{
    ViewData["Title"] = "Tratamientos";
    ViewData["TituloOperacion"] = "Agregar Tratamiento";
    
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class=" form-floating mb-3">
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre" />
                <label asp-for="Nombre" class="control-label"></label>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            
            <div class="form-floating mb-3">
                <input asp-for="Precio" class="form-control" placeholder="Ingrese precio" />
                <label asp-for="Precio" class="control-label"></label>
                <span asp-validation-for="Precio" class="text-danger"></span>

            </div>
                        
            <div class="form-group mb-3">
                <input type="submit" value="Agregar Tratamiento" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Volver a lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
