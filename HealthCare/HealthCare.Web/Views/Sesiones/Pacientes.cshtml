@model IEnumerable<HealthCare.Web.Models.Paciente>

@{ 
    ViewData["Title"] = "Sesiones";    
    ViewData["TituloOperacion"] = "Seleccione Paciente"; 
    }


<div class="table-responsive">
    <table id="miTabla" class="table table-striped table-hover ">
        <thead class="bg-dark text-white">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">

                        @if (item.Imagen != null)
                        {
                            <img class="rounded-circle" id="profilePicture" style="width:40px;height:40px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(item.Imagen))"> }
                        else
                        {
                            <img class="rounded-circle" id="profilePicture" style="width:40px;height:40px; object-fit:cover" src="~/Images/avatar2.jpg">
                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaNacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>

                    
                    <td><a class="btn btn-primary text-sombreado" asp-action="Create" asp-route-id="@item.Id"><i class="fas fa-list-ul"></i><span class="miClass"> Agregar Sesión</span></a></td>                    
                </tr>            
             }
        </tbody>
    </table>
</div>