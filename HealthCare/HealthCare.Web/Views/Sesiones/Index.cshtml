@model IEnumerable<HealthCare.Web.Models.Sesion>

@{ ViewData["Title"] = "Sesiones";
    ViewData["TituloOperacion"] = "Sesiones"; }


<p>
    <a class="btn btn-chartreuse text-sombreado" asp-action="Create"><i class="fas fa-plus"></i> Crear Nueva</a>
</p>

<div class="table-responsive">
    <table id="miTabla" class="table table-striped table-hover ">
        <thead class="bg-dark text-white">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Patologia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tratamiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Producto)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.Observaciones)
                </th>
                
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente.Apellido), @Html.DisplayFor(modelItem => item.Paciente.Nombre)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Patologia.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tratamiento.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.Nombre)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                
                <td><a class="btn btn-primary text-sombreado" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-list-ul"></i><span class="miClass"> Más Detalles</span></a></td>                
            </tr>
            }
        </tbody>
    </table>
</div>